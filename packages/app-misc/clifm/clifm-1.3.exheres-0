require github [ user=leo-arch tag=v${PV} ]

SUMMARY="CLI-based, shell-like, and non-curses terminal file manager written in C"
LICENCES="GPL-2"

SLOT="0"
PLATFORMS="~amd64"
MYOPTIONS=""

DEPENDENCIES="
    build+run:
        sys-apps/acl
        sys-libs/libcap
        sys-libs/readline:=
"

src_prepare() {
    default

    edo sed -e "/CFLAGS =/d" -i "${WORK}"/Makefile
    edo sed -e 's/cc /${CC} /g' -i "${WORK}"/Makefile
}

src_install() {
    dodir /usr/share

    emake DESTDIR=${IMAGE} PREFIX=/usr/$(exhost --target) DESKTOPPREFIX=/usr/share install
}

